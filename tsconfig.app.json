{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
  ],
  "exclude": [
    "src/**/__tests__/*",
  ],
  "compilerOptions": {
    "lib": [
      "es2016",
      "dom"
    ],
    "composite": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
